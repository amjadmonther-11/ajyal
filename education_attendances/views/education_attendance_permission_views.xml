<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_education_attendance_permission_tree" model="ir.ui.view">
        <field name="name">education.attendance.permission.tree</field>
        <field name="model">education.attendance.permission</field>
        <field name="arch" type="xml">
            <tree string="Permission Requests">
                <field name="request_no"/>
                <field name="student_id"/>
                <field name="request_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="number_of_days"/>
                <field name="permission_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>



    <record id="view_education_attendance_permission_form" model="ir.ui.view">
        <field name="name">education.attendance.permission.form</field>
        <field name="model">education.attendance.permission</field>
        <field name="arch" type="xml">
            <form string="Permission Request">



                <header>
                    <button name="action_submit_approval"
                            type="object"
                            string="Submit for Approval"
                            class="btn-primary"
                            invisible="state != 'new'"/>

                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            class="btn-success"
                            invisible="state != 'waiting_approval'"/>

                    <button name="action_reject"
                            type="object"
                            string="Reject"
                            class="btn-danger"
                            invisible="state != 'waiting_approval'"/>

                    <button name="action_reset_to_new"
                            type="object"
                            string="Set to New"
                            class="btn-secondary"
                            invisible="state != 'rejected'"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="new,waiting_approval,approved,rejected"/>
                </header>



                <sheet>
                     <div class="oe_title">
                        <h2>
                             
                              <field name="request_no"  style="font-weight: bold; color: #000000;" readonly="1" placeholder="Permission No" />
                        </h2>
                    </div>
                
                    <group>

                        <group>
                            <field name="student_id"/>
                            <field name="request_date"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="number_of_days"/>
                        </group>

                        <group>
                            <field name="permission_type"/>
                            <field name="reason"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="approver_id"/>
                            <field name="state"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Description / Comments">
                          <field name="description" placeholder="typing a message"/>
                        </page>
                    </notebook>     
                                         
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_attendance_permission" model="ir.actions.act_window">
        <field name="name">Permissions</field>
        <field name="res_model">education.attendance.permission</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="education_attendance_permission_sub_menu"
          name="Permissions"
          parent="education_attendances.education_attendance_report_menu"
          action="action_education_attendance_permission"
          sequence="2"/>


</odoo>

