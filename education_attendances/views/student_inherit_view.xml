<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="education_student_form_inherit_permissions" model="ir.ui.view">
        <field name="name">education.student.form.inherit.permissions</field>
        <field name="model">education.student</field>
        <field name="inherit_id" ref="education_core.education_student_view_form"/> 
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_permission_requests"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-id-card"
                        string="Permissions">
                    <!-- <field name="permission_count" widget="statinfo"/> -->
                </button>
            </xpath>
        </field>
    </record>
</odoo>
