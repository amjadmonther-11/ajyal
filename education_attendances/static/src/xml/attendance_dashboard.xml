<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="AttendDashboardMain">
        <div class="o_dashboards">
            <div class="container-fluid o_hr_dashboard">
            </div>
            <div class="o_hr_birthday_reminder"></div>
        </div>
    </t>

    <t t-name="ManagerDashboard">
        <t t-set="count" t-value="0"/>
        <t t-set="atten" t-value="0"/>
        <t t-set="absence" t-value="0"/>
        <input type="hidden" name="hidden"  value="" id="school_id"/>
        <t t-foreach="widget.school_fees.schools" t-as="school">
            <t t-foreach="widget.school_fees.students" t-as="total_student">
                <t t-if="total_student[0]==school.id">
                <t t-set="count" t-value="total_student[1]"/>
                <t t-set="atten" t-value="total_student[2]"/>
                <t t-set="absence" t-value="total_student[3]"/>

                </t>
            </t>
        <div class="col-xs-6 employee_dashboard_main" style="background-color:white;padding-bottom: 30px;">

               <div class="col-sm-12 col-lg-12 " style="background-color:#91a5a2;border:solid 5px #91a5a2 ;border-radius: 20px;padding: 20px 20px 20px 20px;">
                   <div><p class="stat-title" style="color: white;font-size:28px;margin-left:150px"><strong  t-esc="school.name"/></p>
            <div class="text-left" style="margin-top:-40px;padding-bottom:10px;margin-left:20px;">
            <button type="object"  style="border-radius:10px;height:40px;font-size
                :16px;" class="btn btn-primary btn-sm view_attendances" t-att-id="school.id">View Attendances
            </button>
                    </div>
                </div>
                <div style="color:black;font-size:20px;" class="text-center">غياب و حضور التلاميذ ليوم  <span t-esc="widget.school_fees.today"/>&#160;م</div>
                <br/>
                   
                    <div class="col-sm-6 col-lg-6 leaves_request_month"  style="padding-right:0px !important" >
                        <div class="card text-color" style="height: 102px; background-color:#338099;">
                            <div class="card-body">
                                <h4 class="mb-0">
                                <p class="stat-count"><t t-esc="count"/></p>
                                </h4>
                                <p class="stat-title">Total Students</p>
                            </div>
                        </div>
                    </div>
                <div class="col-sm-6 col-lg-6 hr_leave_request_approve"  style="padding-right:0px !important">
                    <div class="card text-color" style="height: 102px; background-color:#1DD1AE;">
                        <div class="card-body">
                            <h4 class="mb-0">
                                <p class="stat-count"><t t-esc="atten"/></p>
                            </h4>
                            <p class="stat-title">Total attendance</p>
                        </div>
                    </div>
                </div>
                      <div class="col-sm-6 col-lg-6 hr_leave_request_approve"  style="padding-right:0px !important">
                    <div class="card text-color" style="height: 102px;background-color:#e0868c;">
                        <div class="card-body">
                            <h4 class="mb-0">
                                <p class="stat-count"><t t-esc="absence"/></p>
                            </h4>
                            <p class="stat-title">Total Absence</p>
                        </div>
                    </div>
                </div>
                <!--  <div class="col-sm-6 col-lg-6 hr_leave_request_approve"  style="padding-right:0px !important">
                    <div class="card text-color" style="height: 102px; background-color:#668e88;">
                        <div class="card-body">
                            <h4 class="mb-0">
                                <p class="stat-count"><t t-esc="due"/></p>
                            </h4>
                            <p class="stat-title">Total Dues</p>
                        </div>
                    </div>
                </div> -->
            
            </div>

       
        </div>
        
        <t t-set="count" t-value="0"/>
        <t t-set="atten" t-value="0"/>
        <t t-set="absence" t-value="0"/>
    </t>
    </t>

  
</templates>