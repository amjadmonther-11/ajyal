<?xml version="1.0" encoding="UTF-8"?>
<odoo>


<record id="timetable_generate_wizard_form" model="ir.ui.view">
    <field name="name">timetable.generate.wizard.form</field>
    <field name="model">timetable.generate.wizard</field>
    <field name="arch" type="xml">
        <form string="Generate Timetable">
            <sheet>
                <group>
                    <field name="class_division"/>
                    <field name="week_day_ids" widget="many2many_tags"/>
                </group>

                <separator string="Days Periods"/>

                <field name="generated_schedule_ids">
                    <tree editable="bottom" string="Generated Timetable" create="False" delete="False">
                        <field name="week_day"/>
                        <field name="period_id"/>
                        <field name="subject_id"/>
                        <field name="faculty_id"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </tree>
                </field>

                <footer>
                    <button string="Generate" type="object" name="action_generate_timetable" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>

            </sheet>
        </form>
    </field>
</record>

</odoo>

